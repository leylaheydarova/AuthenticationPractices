@{
    ViewData["Title"] = "File Encryption";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Home" asp-action="Index" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="fileInput" class="form-label">Select file</label>
        <input type="file" class="form-control" id="fileInput" name="UploadedFile" required />
    </div>

    <div class="mb-3">
        <button type="submit" name="action" value="encrypt" class="btn btn-primary">Encrypt</button>
        <button type="submit" name="action" value="decrypt" class="btn btn-secondary">Decrypt</button>
    </div>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info">@ViewBag.Message</div>
}
